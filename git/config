# vim: set ft=gitconfig :
[user]
    name = Jon Barksdale
    email = jon.barksdale@gmail.com
[core]
    pager = less -FMRiX
    editor = nvim
[color]
    ui = auto
[push]
    default = simple
[pull]
    rebase = true
[include]
    path = includes/alias
    path = includes/themes.gitconfig
# Read in order, last set wins
    path = ~/.gitconfig-local
[commit]
    verbose = true
[diff]
    colorMoved = true
[difftool "bc"]
  trustExitCode = true
[pager]
    diff = delta
    log = bat --style="header,grid,rule,snip"
    reflog = bat --style="header,grid,rule,snip"
    show = delta
[interactive]
    diffFilter = delta --color-only --features=interactive
[delta]
    features = colibri
[merge]
    tool = idea
[mergetool "idea"]
  cmd = '~/bin/idea' merge "$LOCAL" "$REMOTE" "$BASE" "$MERGED"
  trustExitCode = true
[mergetool "bc"]
  trustExitCode = true
[mergetool]
  keepBackup = false
[init]
	defaultBranch = main
