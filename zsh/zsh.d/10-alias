# vim: set ft=zsh :

if [[ "$(uname)" == "Linux" ]]
then
  alias ls='ls --color=auto'
else
  alias ls='ls -hFG'
fi
alias ll='ls -lh'
alias df='df -h'
alias du='du -h'
alias fixtmux='killall -s SIGUSR1 tmux'

function gr {
  if [ -x "gradlew" ]; then
    ./gradlew $@
  else
    gradle $@
  fi
}

function updateall {
    echo "Homeshick:"
    homeshick refresh
    echo "Brew:"
    brew upgrade --cleanup
    echo "zplug"
    zplug update
    echo "vim"
    vim -c "PlugUpgrade|PlugUpdate|qa"
}
