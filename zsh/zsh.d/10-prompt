# vim: set ft=zsh :

autoload -U colors && colors
autoload -U promptinit && promptinit

setopt transient_rprompt
setopt promptsubst

if [[ $(type git_super_status) ]]; then
    # time - dir _____ user@host
    # vcsinfo - exit code
    # RPS1 - vim mode
  PS1=$'[%{$fg[green]%}%n@%m%{$reset_color%} %*] [%{$fg_bold[white]%}%~%{$reset_color%}]
$(git_super_status) \%# '
else

  PS1=$'[%{$fg[green]%}%n@%m%{$reset_color%} %*] [%{$fg_bold[white]%}%~%{$reset_color%}]
\%# '
fi

